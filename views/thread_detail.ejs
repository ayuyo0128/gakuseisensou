          <button type="submit">Êõ∏„ÅçËæº„ÇÄÔºàÁ¢∫Ë™çÔºâ</button>
        </form>
      </div>
    </div>

  <script>
    function insertReply(number) {
      const replyBox = document.getElementById("replyBox");
      replyBox.value += `>>${number}\n`;
      replyBox.focus();
    }
    function validateForm() {
      if (!document.getElementById("replyBox").value.trim()) {
        alert("„Ç≥„É°„É≥„Éà„ÇíÂÖ•Âäõ„Åó„Å¶„Åè„Å†„Åï„ÅÑ„ÄÇ");
        return false;
      }
      return true;
    }
    function toggleDeleteForm(id) {
      const form = document.getElementById(`delete-form-${id}`);
      if (form) {
        form.style.display = form.style.display === 'block' ? 'none' : 'block';
      }
    }
  </script>
</body>
</html>
